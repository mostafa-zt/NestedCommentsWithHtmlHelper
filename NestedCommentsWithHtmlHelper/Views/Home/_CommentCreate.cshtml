@model NestedCommentsWithExtensionHtmlHelper.ViewModel.CommentViewModel
@using (Html.BeginForm("Create", "Home", FormMethod.Post))
{
    <!-- ایدی کامنت والد -->
    @Html.HiddenFor(x => Model.Id)
    <div class="form-group">
        <label for="Text">Your Comment</label>
        @Html.TextAreaFor(m => Model.Text, 4, 6, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        @Html.TextBoxFor(x => Model.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Alias">Alias</label>
        @Html.TextBoxFor(x => Model.Alias, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Send</button>
}